uniform highp float progress;

void fragment() {
    highp vec4 texture = zTexture(UV);

    COLOR = vec4(vec3(zGrayscale_BT709(texture.rgb)), texture.a);

    if (UV.y <= progress)
        COLOR.rgb = texture.rgb;
}
