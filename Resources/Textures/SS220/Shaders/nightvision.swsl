uniform sampler2D LIGHT_TEXTURE;

uniform highp float MinLight;

void fragment()
{
    highp vec4 tex = zTextureSpec(LIGHT_TEXTURE, UV);
    highp float lightLevel = tex.r;
    highp float base = max(lightLevel, MinLight);
    base = clamp(base, 0.0, 1.0);

    COLOR = vec4(base, base, base, 1.0);
}
