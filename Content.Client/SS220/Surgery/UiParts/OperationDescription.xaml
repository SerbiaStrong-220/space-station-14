<surgeryUiParts:OperationDescription
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:surgeryUiParts="clr-namespace:Content.Client.SS220.Surgery.UiParts">
    <Control>
        <PanelContainer>
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#1B1B1E"/>
            </PanelContainer.PanelOverride>
        </PanelContainer>
        <!-- Kinda overall info to make player feel more confident.
        It should give the right step order and some description for operation -->
        <BoxContainer Orientation="Vertical">
            <BoxContainer Orientation="Horizontal">
                <TextureRect Name="LockIcon" Stretch="Keep" TexturePath="/Textures/Interface/VerbIcons/lock.svg.192dpi.png"
                    Visible="False" TextureScale="0.25 0.25"/>
            </BoxContainer>
            <BoxContainer Orientation="Vertical" VerticalExpand="True">
                <RichTextLabel Name="Header" Text="{Loc 'operation-description-header'}" HorizontalExpand="True" HorizontalAlignment="Left"/>
                <RichTextLabel Name="OperationName" Text="operation-name" HorizontalExpand="True" HorizontalAlignment="Left" Margin="20 5 5 0"/>
                <ScrollContainer Name="ScrollOperationContainer" HScrollEnabled="False" Margin="10 5 5 0"
                    HorizontalExpand="False" VerticalExpand="True" MouseFilter="Pass">
                    <BoxContainer
                        Name="OperationContainer"
                        Orientation="Vertical"
                        SizeFlagsStretchRatio="1"
                        HorizontalExpand="False"
                        VerticalExpand="True">
                        <RichTextLabel Name="Description" HorizontalExpand="False" Text="operation-description" VerticalExpand="True"/>
                    </BoxContainer>
                </ScrollContainer>
            </BoxContainer>
        </BoxContainer>
    </Control>
</surgeryUiParts:OperationDescription>
