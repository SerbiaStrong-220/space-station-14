<surgeryUiParts:TreatmentSuggestion
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:surgeryUiParts="clr-namespace:Content.Client.SS220.Surgery.UiParts">
    <Control>
        <PanelContainer>
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#1B1B1E"/>
            </PanelContainer.PanelOverride>
        </PanelContainer>
        <BoxContainer Orientation="Vertical">
            <RichTextLabel Name="HeaderText" Text="{Loc 'treatment-suggestion-header'}"/>
            <RichTextLabel Name="TreatmentSuggestionText" Text="treatment-suggestion" HorizontalExpand="True"
                HorizontalAlignment="Center" Margin="10 5 0 5"/>
        </BoxContainer>
    </Control>
</surgeryUiParts:TreatmentSuggestion>
