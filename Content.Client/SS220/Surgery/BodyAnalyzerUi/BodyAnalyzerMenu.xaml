<controls:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:surgeryUiParts="clr-namespace:Content.Client.SS220.Surgery.UiParts"
    Title="{Loc 'surgery-observer-title'}"
    Resizable="False"
    SetSize="920 444"
    RectClipContent="False">
    <Control>
        <PanelContainer>
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#1B1B1E"/>
            </PanelContainer.PanelOverride>
        </PanelContainer>
        <BoxContainer Name="ContentBoxContainer" Orientation="Horizontal" Margin="5">
            <ScrollContainer HScrollEnabled="False" VerticalExpand="True" Margin="0 0 10 0" HorizontalExpand="True" SetSize="460 420">
                <BoxContainer Name="PatientInfo" Orientation="Vertical">
                    <surgeryUiParts:PatientStatus Name="PatientStatus" HorizontalExpand="True" VerticalExpand="True"/>
                    <surgeryUiParts:TreatmentSuggestion Name="TreatmentSuggestion" HorizontalExpand="True"  VerticalExpand="True"/>
                </BoxContainer>
            </ScrollContainer>
            <BoxContainer Name="HandBook" Orientation="Vertical" SetSize="460 420">
                <surgeryUiParts:OperationList Name="OperationList" VerticalExpand="True" MaxHeight="120" HorizontalExpand="False"/>
                <surgeryUiParts:OperationDescription Name="OperationDescription" MinHeight="280" Visible ="False"
                    HorizontalExpand="False" VerticalExpand="True"/>
            </BoxContainer>
        </BoxContainer>
    </Control>
</controls:FancyWindow>
