<DefaultWindow Title="{Loc Ghost Role Cast Settings}"
            xmlns="https://spacestation14.io">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label Name="RoleNameLabel" MinSize="150 0" Text="Role Name" />
            <LineEdit Name="RoleName" MinSize="300 0" HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Name="RoleDescriptionLabel" MinSize="150 0" Text="Role Description" />
            <LineEdit Name="RoleDescription" MinSize="300 0" HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Name="RoleRulesLabel" MinSize="150 0" Text="Role Rules" />
            <LineEdit Name="RoleRules" MinSize="300 0" HorizontalExpand="True" Text="{Loc ghost-role-component-default-rules}" />
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
