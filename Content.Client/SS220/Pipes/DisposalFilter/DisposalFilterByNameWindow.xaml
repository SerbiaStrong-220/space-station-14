<controls:DisposalFilterByNameWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.SS220.Pipes.DisposalFilter">

    <LineEdit Access="Public"
              Name="FilterByNameLineEdit"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              HorizontalExpand="True"
              MinSize="150 32"
              PlaceHolder="{Loc 'filter-text-filter'}"/>

    <RichTextLabel Access="Public" Name="CurrentFiltersByName" HorizontalAlignment="Center" Margin="0 5 0 0"/>
    <Button SetSize="120 32" Access="Public" Text="{Loc 'filter-confirm-text'}" Name="ConfirmFilterButton" StyleClasses="OpenBoth" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

</controls:DisposalFilterByNameWindow>
