<Control xmlns="https://spacestation14.io">
    <BoxContainer Margin="8,8,8,8" Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label Name="ListingName" HorizontalExpand="True" />
            <Button
                Name="SelectButton"
                MinWidth="64"
                HorizontalAlignment="Right"
                Access="Public" />
        </BoxContainer>
        <PanelContainer StyleClasses="HighDivider" />
        <BoxContainer HorizontalExpand="True" Orientation="Horizontal">
            <TextureRect
                Name="ListingIcon"
                Margin="0,0,4,0"
                MinSize="48 48"
                Stretch="KeepAspectCentered" />
            <Control MinWidth="5"/>
            <BoxContainer Orientation="Vertical">
                <RichTextLabel Name="ListingDescription" Margin="4 4 0 0" StyleClasses="LabelSubText" />
                <RichTextLabel Name="ListingSubDescription" Margin="4 4 0 0" StyleClasses="LabelSubText" />
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</Control>
