<Control xmlns="https://spacestation14.io"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">
    <PanelContainer>
        <PanelContainer.PanelOverride>
            <gfx:StyleBoxFlat BackgroundColor="#25252A" />
        </PanelContainer.PanelOverride>
        <BoxContainer Orientation="Vertical" MinSize="196 196" MaxSize="196 196" Margin="8 8 8 8">
            <TextureRect
                Name="Texture"
                TexturePath="/Textures/SS220/DarkForces/Cult/Structures/forge.rsi/icon.png"
                Margin="8 8 8 8"
                MinSize="48 48"
                MaxSize="48 48"
                Stretch="KeepAspectCentered" />

            <Label Name="Name" Align="Center" Margin="4 4 4 4" />
            <Label Name="Description" Align="Center" Margin="0 0 0 0" StyleClasses="LabelSubText" />
            <Label Name="Cost" Align="Center" Margin="0 0 0 0" StyleClasses="LabelSubText" />

            <Button Name="CreateButton" HorizontalExpand="True" Margin="8 8 8 8" />
        </BoxContainer>
    </PanelContainer>
</Control>
