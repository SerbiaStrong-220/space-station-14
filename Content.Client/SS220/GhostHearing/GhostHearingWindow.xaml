<ui:FancyWindow  xmlns="https://spacestation14.io"
                        xmlns:ui="clr-namespace:Content.Client.UserInterface.Controls"
                        MinSize="250 500"
                        Title="{Loc headset-ui-title}">

    <PanelContainer>
        <BoxContainer Orientation="Vertical">
            <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" SeparationOverride="5">
                <Button Name="ToggleAllChannels"
                        VerticalAlignment="Top"
                        SetSize="230 40"
                        StyleClasses="OpenBoth"/>
            </BoxContainer>

            <PanelContainer StyleClasses="HighDivider" Margin="0 5 0 5"/>

            <ScrollContainer VerticalExpand="true">
                <BoxContainer Access="Public"
                              Name="ChannelsList"
                              MinSize="130 500"
                              Orientation="Vertical"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Center"/>
            </ScrollContainer>

        </BoxContainer>
    </PanelContainer>
</ui:FancyWindow>
