    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:ExperienceUiElements="clr-namespace:Content.Client.SS220.Experience.UiElements">
    <BoxContainer Name="ContentContainer" Orientation="Vertical" Margin="0 2">
        <BoxContainer Orientation="Vertical">
            <BoxContainer Name ="InfoContainer" Orientation="Horizontal">
                <TextureRect Name="TreeIconRect"/>
                <RichTextLabel Name="TreeName" Text="place-holder"/>
            </BoxContainer>
            <BoxContainer Orientation="Horizontal">
                <TextureButton Name="ShowSubLevelsButton" TexturePath="/Textures/SS220/Interface/ExperienceView/unroll-button.png"  Margin="0 0 5 0"/>
                <BoxContainer Name ="TreeLevelsContainer"  MouseFilter="Stop" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Added here by code -->
                </BoxContainer>
            </BoxContainer>
        </BoxContainer>
        <BoxContainer Name="SubdataContainer" Orientation="Horizontal" Visible="False" Margin="20 2 0 2">
            <TextureButton Name="SubmitButton" TexturePath="/Textures/SS220/Interface/ExperienceView/add-button.png"  Margin="0 0 5 0"/>
            <BoxContainer Name="SublevelsContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Sublevels visual added by code -->
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
