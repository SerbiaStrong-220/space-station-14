<controls:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:styleDef="clr-namespace:Content.Client.SS220.Experience.Ui"
    Title="{Loc 'experience-view-panel-title'}"
    Resizable="True"
    MinSize="400 320"
    SetSize="400 320"
    RectClipContent="False">
    <Control>
        <PanelContainer>
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#1B1B1E"/>
            </PanelContainer.PanelOverride>
        </PanelContainer>
        <ScrollContainer HScrollEnabled="False">
            <BoxContainer Orientation="Vertical" Margin="5">
                <RichTextLabel Name="KnowledgeTitle" Text="{Loc 'experience-view-knowledge-title'}"/>
                <BoxContainer Name="knowledgesContainer" Orientation="Vertical" Margin="{x:Static styleDef:ExperienceUiStyleDefinitions.BaseTabLikeThickness}">
                    <!-- Added by code -->
                </BoxContainer>
                <RichTextLabel Name="TreeGroupsTitle" Text="{Loc 'experience-view-tree-groups-title'}"/>
                <BoxContainer Name="ExperienceTreeGroupsContainer" Orientation="Vertical" Margin="{x:Static styleDef:ExperienceUiStyleDefinitions.BaseTabLikeThickness}">
                    <!-- Added by code -->
                </BoxContainer>
                <Button Name="SubmitButton" Text="+SuBmIt+"/>
            </BoxContainer>
        </ScrollContainer>
    </Control>
</controls:FancyWindow>
