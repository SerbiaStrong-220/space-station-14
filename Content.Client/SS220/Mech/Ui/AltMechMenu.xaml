<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'mech-menu-title'}">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
        <BoxContainer Margin="10 10 10 10" Orientation="Horizontal" HorizontalExpand="True">
            <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                <SpriteView Name="MechView"
                    Margin="10 0 0 0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    OverrideDirection="South"
                    SetSize="64 64"
                    MaxSize="64 64"
                    Scale="2 2">
                </SpriteView>
                <ProgressBar Name="IntegrityDisplayBar"
                             HorizontalExpand="True"
                             SetHeight="25"
                             MaxValue="1"
                             Value="0">
                    <Label Name="IntegrityDisplay"
                           HorizontalAlignment="Left"
                           Margin="5 0 0 0"
                           VerticalAlignment="Center" />
                </ProgressBar>
            </BoxContainer>
        </BoxContainer>
        <BoxContainer Margin="10 10 10 10" Orientation="Horizontal" HorizontalExpand="True">
            <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                <SpriteView Name="MechView11"
                    Margin="10 0 0 0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    OverrideDirection="South"
                    SetSize="64 64"
                    MaxSize="64 64"
                    Scale="2 2">
                </SpriteView>
                <ProgressBar Name="IntegrityDisplayBar11"
                             HorizontalExpand="True"
                             SetHeight="25"
                             MaxValue="1"
                             Value="0">
                    <Label Name="IntegrityDisplay11"
                           HorizontalAlignment="Left"
                           Margin="5 0 0 0"
                           VerticalAlignment="Center" />
                </ProgressBar>
            </BoxContainer>
            <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                <SpriteView Name="MechView12"
                    Margin="10 0 0 0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    OverrideDirection="South"
                    SetSize="64 64"
                    MaxSize="64 64"
                    Scale="2 2">
                </SpriteView>
                <ProgressBar Name="IntegrityDisplayBar12"
                             HorizontalExpand="True"
                             SetHeight="25"
                             MaxValue="1"
                             Value="0">
                    <Label Name="IntegrityDisplay12"
                           HorizontalAlignment="Left"
                           Margin="5 0 0 0"
                           VerticalAlignment="Center" />
                </ProgressBar>
            </BoxContainer>
            <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                <SpriteView Name="MechView13"
                    Margin="10 0 0 0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    OverrideDirection="South"
                    SetSize="64 64"
                    MaxSize="64 64"
                    Scale="2 2">
                </SpriteView>
                <ProgressBar Name="IntegrityDisplayBar13"
                             HorizontalExpand="True"
                             SetHeight="25"
                             MaxValue="1"
                             Value="0">
                    <Label Name="IntegrityDisplay13"
                           HorizontalAlignment="Left"
                           Margin="5 0 0 0"
                           VerticalAlignment="Center" />
                </ProgressBar>
            </BoxContainer>
        </BoxContainer>
        <BoxContainer Margin="10 10 10 10" Orientation="Horizontal" HorizontalExpand="True">
            <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                <SpriteView Name="MechView2"
                    Margin="10 0 0 0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    OverrideDirection="South"
                    SetSize="64 64"
                    MaxSize="64 64"
                    Scale="2 2">
                </SpriteView>
                <ProgressBar Name="IntegrityDisplayBar2"
                             HorizontalExpand="True"
                             SetHeight="25"
                             MaxValue="1"
                             Value="0">
                    <Label Name="IntegrityDisplay2"
                           HorizontalAlignment="Left"
                           Margin="5 0 0 0"
                           VerticalAlignment="Center" />
                </ProgressBar>
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
