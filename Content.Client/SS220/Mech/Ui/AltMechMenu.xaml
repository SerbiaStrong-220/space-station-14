<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'mech-menu-title'}">
    <BoxContainer Orientation="Horizontal" HorizontalExpand="True" VerticalExpand="True" MinSize="435 362">
        <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" MinSize="435 362">
            <BoxContainer Margin="10 10 10 10" Orientation="Horizontal" HorizontalExpand="True">
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <Button Name="Maintenance"
                        Text="{Loc 'mech-maintenance-mode-button'}"
                        TextAlign="Center"
                        ToggleMode="True"
                        VerticalAlignment="Top"
                        VerticalExpand="False"/>
                    <Button Name="Seal"
                        Text="{Loc 'mech-seal-button'}"
                        TextAlign="Center"
                        ToggleMode="True"
                        VerticalAlignment="Top"
                        VerticalExpand="False"/>
                    <Button Name="Bolt"
                        Text="{Loc 'mech-bolt-button'}"
                        TextAlign="Center"
                        ToggleMode="True"
                        VerticalAlignment="Top"
                        VerticalExpand="False"/>
                    <Button Name="DetachTank"
                        Text="{Loc 'mech-detach-tank-button'}"
                        TextAlign="Center"
                        VerticalAlignment="Top"
                        VerticalExpand="False"/>
                </BoxContainer>
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <SpriteView Name="MechViewHead"
                        Margin="10 0 0 0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        OverrideDirection="South"
                        SetSize="64 64"
                        MaxSize="64 64"
                        Scale="2 2">
                    </SpriteView>
                    <TextureButton Name="RemoveButtonHead" Scale="0.5 0.5" SetSize="20 20"></TextureButton>
                    <ProgressBar Name="IntegrityDisplayBarHead"
                                 HorizontalExpand="True"
                                 SetHeight="25"
                                 MaxValue="1"
                                 Value="0">
                        <Label Name="IntegrityDisplayHead"
                               HorizontalAlignment="Left"
                               Margin="5 0 0 0"
                               VerticalAlignment="Center" />
                    </ProgressBar>
                </BoxContainer>
            </BoxContainer>
            <BoxContainer Margin="10 10 10 10" Orientation="Horizontal" HorizontalExpand="True">
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <SpriteView Name="MechViewLeftArm"
                        Margin="10 5 5 5"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        OverrideDirection="South"
                        SetSize="64 64"
                        MaxSize="64 64"
                        Scale="2 2">
                    </SpriteView>
                    <TextureButton Name="RemoveButtonLeftArm" Scale="0.5 0.5" SetSize="20 20"></TextureButton>
                    <ProgressBar Name="IntegrityDisplayBarLeftArm"
                                 HorizontalExpand="True"
                                 SetHeight="25"
                                 Margin="10 4 4 4"
                                 MaxValue="1"
                                 Value="0">
                        <Label Name="IntegrityDisplayLeftArm"
                               HorizontalAlignment="Left"
                               Margin="5 0 0 0"
                               VerticalAlignment="Center" />
                    </ProgressBar>
                </BoxContainer>
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <SpriteView Name="MechViewCore"
                        Margin="10 5 5 5"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        OverrideDirection="South"
                        SetSize="64 64"
                        MaxSize="64 64"
                        Scale="2 2">
                    </SpriteView>
                    <ProgressBar Name="IntegrityDisplayBarCore"
                                 HorizontalExpand="True"
                                 SetHeight="25"
                                 Margin="10 4 4 4"
                                 MaxValue="1"
                                 Value="0">
                        <Label Name="IntegrityDisplayCore"
                               HorizontalAlignment="Left"
                               Margin="5 0 0 0"
                               VerticalAlignment="Center" />
                    </ProgressBar>
                </BoxContainer>
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <SpriteView Name="MechViewRightArm"
                        Margin="10 5 5 5"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        OverrideDirection="South"
                        SetSize="64 64"
                        MaxSize="64 64"
                        Scale="2 2">
                    </SpriteView>
                    <TextureButton Name="RemoveButtonRightArm" Scale="0.5 0.5" SetSize="20 20"></TextureButton>
                    <ProgressBar Name="IntegrityDisplayBarRightArm"
                                 HorizontalExpand="True"
                                 SetHeight="25"
                                 Margin="10 4 4 4"
                                 MaxValue="1"
                                 Value="0">
                        <Label Name="IntegrityDisplayRightArm"
                               HorizontalAlignment="Left"
                               Margin="5 0 0 0"
                               VerticalAlignment="Center" />
                    </ProgressBar>
                </BoxContainer>
            </BoxContainer>
            <BoxContainer Margin="10 10 10 10" Orientation="Horizontal" HorizontalExpand="True">
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <SpriteView Name="MechViewChassis"
                        Margin="10 0 0 0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        OverrideDirection="South"
                        SetSize="64 64"
                        MaxSize="64 64"
                        Scale="2 2">
                    </SpriteView>
                    <TextureButton Name="RemoveButtonChassis" Scale="0.5 0.5" SetSize="20 20"></TextureButton>
                    <ProgressBar Name="IntegrityDisplayBarChassis"
                                 HorizontalExpand="True"
                                 SetHeight="25"
                                 MaxValue="1"
                                 Value="0">
                        <Label Name="IntegrityDisplayChassis"
                               HorizontalAlignment="Left"
                               Margin="5 0 0 0"
                               VerticalAlignment="Center" />
                    </ProgressBar>
                </BoxContainer>
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <SpriteView Name="MechViewPower"
                        Margin="10 0 0 0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        OverrideDirection="South"
                        SetSize="64 64"
                        MaxSize="64 64"
                        Scale="2 2">
                    </SpriteView>
                    <TextureButton Name="RemoveButtonPower" Scale="0.5 0.5" SetSize="20 20"></TextureButton>
                    <ProgressBar Name="IntegrityDisplayBarPower"
                                 HorizontalExpand="True"
                                 SetHeight="25"
                                 Margin="10 0 0 0"
                                 MaxValue="1"
                                 Value="0">
                        <Label Name="IntegrityDisplayPower"
                               HorizontalAlignment="Left"
                               Margin="10 0 0 0"
                               VerticalAlignment="Center" />
                    </ProgressBar>
                    <ProgressBar Name="EnergyDisplayBar"
                                 HorizontalExpand="True"
                                 SetHeight="25"
                                 Margin="10 0 0 0"
                                 MaxValue="1"
                                 Value="0">
                        <Label Name="EnergyDisplay"
                               HorizontalAlignment="Left"
                               Margin="10 0 0 0"
                               VerticalAlignment="Center" />
                    </ProgressBar>
                </BoxContainer>
            </BoxContainer>
        </BoxContainer>
        <BoxContainer VerticalExpand="True" Margin="10 0 10 10" Orientation="Vertical">
            <PanelContainer VerticalExpand="True" MinSize="0 200">
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                </PanelContainer.PanelOverride>
                <ScrollContainer
                    HScrollEnabled="False"
                    HorizontalExpand="True"
                    MinSize="100 256"
                    SizeFlagsStretchRatio="2"
                    VerticalExpand="True">
                    <BoxContainer
                        Name="EquipmentControlContainer"
                        MinSize="100 256"
                        Orientation="Vertical"
                        SizeFlagsStretchRatio="2"
                        VerticalExpand="True">
                    </BoxContainer>
                </ScrollContainer>
            </PanelContainer>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
