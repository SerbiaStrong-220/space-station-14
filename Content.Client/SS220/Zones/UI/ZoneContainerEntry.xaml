<BoxContainer xmlns="https://spacestation14.io"
              xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
              xmlns:ut220="clr-namespace:Content.Client.SS220.UserInterface.Utility"
              Orientation="Vertical"
              HorizontalExpand="True"
              MinSize="60 20">
    <BoxContainer Name="Heading" Orientation="Horizontal" HorizontalExpand="True">
        <ContainerButton Name="CollapseButton">
            <TextureRect Name="CollapseButtonTexture"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2 0"/>
        </ContainerButton>
        <ContainerButton Name="ZoneContainerButton" HorizontalExpand="True">
            <PanelContainer Name="ContainerBackgroundPanel" HorizontalExpand="True">
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="5 0">
                    <Label Name="ContainerIDLabel"/>
                    <cc:VSeparator Margin="10 0"/>
                    <Label Name="ContainerNameLabel"  HorizontalExpand="True"/>
                    <cc:VSeparator Margin="10 0"/>
                    <ut220:ConfirmableButton Name="DeleteContainerButton" Access="Public"/>
                </BoxContainer>
            </PanelContainer>
        </ContainerButton>
    </BoxContainer>
    <BoxContainer Name="CollapsibleBox" Orientation="Vertical" Margin="10 0 0 0" HorizontalExpand="True">
        <BoxContainer Name="ZonesBox" Orientation="Vertical" HorizontalExpand="True" Margin="20 0 0 0">
        </BoxContainer>
    </BoxContainer>
</BoxContainer>
