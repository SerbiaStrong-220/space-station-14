<PanelContainer xmlns="https://spacestation14.io"
                xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
                HorizontalExpand="True"
                VerticalExpand="True"
                MinSize="500 250">
    <BoxContainer Orientation="Horizontal" HorizontalExpand="True" VerticalExpand="True">
        <BoxContainer Name="MainBox" Orientation="Vertical" Margin="5" HorizontalExpand="True" VerticalExpand="True" Access="Public">
            <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin ="5 2">
                    <Label Name="NameLabel" Text="{Loc zone-params-panel-name-label}" MouseFilter="Stop"/>
                    <LineEdit Name="NameLineEdit" HorizontalExpand="True" Margin="10 0 0 0"/>
                </BoxContainer>
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin ="5 2">
                    <Label Name="PrototypeIDLabel" Text="{Loc zone-params-panel-prototype-id-label}" MouseFilter="Stop"/>
                    <LineEdit Name="PrototypeIDLineEdit" HorizontalExpand="True" Margin="10 0 0 0"/>
                    <Button Name="PrototypeSelectorButton">
                        <TextureRect Stretch="KeepAspectCentered" TexturePath="/Textures/SS220/Interface/Zones/list.svg.192dpi.png" SetSize="24 24"/>
                    </Button>
                </BoxContainer>
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin ="5 2">
                    <Label Name="HexColorLabel" Text="{Loc zone-params-panel-hex-color-label}" MouseFilter="Stop"/>
                    <LineEdit Name="HexColorLineEdit" HorizontalExpand="True" Margin="10 0 0 0"/>
                    <Button Name="ColorSelectorButton">
						<TextureRect Stretch="KeepAspectCentered" TexturePath="/Textures/SS220/Interface/Zones/palette.svg.192dpi.png" SetSize="24 24"/>
                    </Button>
                </BoxContainer>
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin ="5 2">
                    <Label Name="ContainerNetIDLabel" Text="{Loc zone-params-panel-container-net-id-label}" MouseFilter="Stop"/>
                    <LineEdit Name="ContainerNetIDLineEdit" HorizontalExpand="True" Margin="10 0 0 0"/>
                </BoxContainer>
                <CheckBox Name="AttachToGridCheckbox" Text="{Loc zone-params-panel-attach-to-grid-check-box}" LeftAlign="False" Margin ="5 2" />
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin ="5 2">
                    <Label Name="CutSpaceOptionLabel" Text="{Loc zone-params-panel-cut-space-option-label}" HorizontalExpand="True" MouseFilter="Stop"/>
                    <OptionButton Name="CutSpaceOptionSelector" Margin="10 0 0 0"/>
                </BoxContainer>
            </BoxContainer>
        </BoxContainer>
        <BoxContainer Orientation="Vertical" VerticalExpand="True" Margin ="5 5" MinSize="250 250">
            <PanelContainer Name="SizeOptionsBackground" HorizontalExpand="True" VerticalExpand="True">
                <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
                    <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                        <Label Text="x1" HorizontalExpand="True" Align="Center" Margin="2"/>
                        <cc:VSeparator Margin="2 0"/>
                        <Label Text="y1" HorizontalExpand="True" Align="Center" Margin="2"/>
                        <cc:VSeparator Margin="2 0"/>
                        <Label Text="x2" HorizontalExpand="True" Align="Center" Margin="2"/>
                        <cc:VSeparator Margin="2 0"/>
                        <Label Text="y2" HorizontalExpand="True" Align="Center" Margin="2"/>
                    </BoxContainer>
                    <cc:HSeparator />
                    <ScrollContainer HorizontalExpand="True" VerticalExpand="True" Margin="2">
                        <BoxContainer Name="Box2ListContainer" Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True"/>
                    </ScrollContainer>
                    <BoxContainer Orientation="Horizontal" HorizontalExpand="True"  Margin="0 2 0 0">
                        <Button Name="AddBoxButton" Text="{Loc zone-params-panel-add-box-button}" Access="Public" ToggleMode="True" HorizontalExpand="True"/>
                        <Button Name="CutBoxButton" Text="{Loc zone-params-panel-cut-box-button}" Access="Public" ToggleMode="True" HorizontalExpand="True"/>
                    </BoxContainer>
                    <Button Name="ShowChangesButton" Text="{Loc zone-params-panel-show-changes-button}" Access="Public" ToggleMode="True" Margin="0 2 0 2" HorizontalExpand="True"/>
                </BoxContainer>
            </PanelContainer>
        </BoxContainer>
    </BoxContainer>
</PanelContainer>
