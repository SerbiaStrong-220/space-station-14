<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc zone-warning-window-name}"
               MinSize="250 50"
               MaxWidth="500">
    <BoxContainer Orientation="Vertical" VerticalExpand="True" HorizontalExpand="True">
        <RichTextLabel Name="WarningLabel" Access="Public" VerticalExpand="True" HorizontalExpand="True"/>
        <BoxContainer Align="Center" Orientation="Horizontal" HorizontalExpand="True">
            <Button Name="ConfirmButton" Text="{Loc zone-warning-window-confirm-button}" Access="Public"/>
            <Button Name="CancelButton" Text="{Loc zone-warning-window-cancel-button}" Access="Public"/>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
